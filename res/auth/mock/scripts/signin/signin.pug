.login2(ng-controller='SignInCtrl')
  .login-wrapper
    a(href='./')
      div.logoDiv
      //- img(width='160', height='160', src='/static/logo/exports/STF-512.png', title='STF')

    form(name='signin', style='display: none', novalidate, ng-submit='submit()')
      .alert.alert-danger(ng-show='error')
        span(ng-show='error.$invalid', translate) Check errors below
        span(ng-show='error.$incorrect', translate) Incorrect login details
        span(ng-show='error.$server', translate) Server error. Check log output.

      .form-group
        .input-group
          span.input-group-addon
            i.fa.fa-user
          input.form-control(ng-model='username', name='username', required, type='text', placeholder='用户名',
          autocorrect='off', autocapitalize='off', spellcheck='false', autocomplete='section-login username')
        //- .alert.alert-warning(ng-show='signin.username.$dirty && signin.username.$invalid')
          //- span(translate) Please enter your name
          span(translate) 请输入你的用户名

      .form-group
        .input-group
          span.input-group-addon
            i.fa.fa-user
          input.form-control(ng-model='userpass', name='userpass', required, type='text', placeholder='密码',
          autocorrect='off', style='display: none', autocapitalize='off', spellcheck='false', autocomplete='section-login userpass')
        //- .alert.alert-warning(ng-show='signin.userpass.$dirty && signin.userpass.$invalid')
          //- span(translate) Please enter your name
          span(translate) 请输入你的密码


